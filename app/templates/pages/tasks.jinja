{#=====================================================
  Things list page
  - List of things passed in as 'things' array
  - Form for adding a new thing
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

    Flask Demo - All tasks

{% endblock %}


{% block content %}

    <h1>tasks...</h1>


    <article>

        <ul>
            {% for task in tasks %}

                <li>
                    <a href="/tasks/{{ tasks.id }}">
                        {{ task.name }}
                    </a>
                </li>

            {% else %}

                <p>None!</p>

            {% endfor %}
        </ul>

    </article>


    <article>

        <h3>Tasks</h3>

        <form action="/add" method="POST">

            <input
                type="id"
                name="name"
                priority="priority"
                timestamp="timestamp"
                required
            >

            <input
                type="number"
                name="name"
                min="0"
                priority="priority number"
                required
            >

            <button>Add the Tasks</button>

        </form>

    </article>

{% endblock %}

